        <tr>
            <th>Социальная </th>
            <th>Первый курс</th>
            <th>Сумма итог</th>
        </tr>
        <tr>
            <td><%= @category.social %> <%= text_field_tag(:social1, params[:social1].nil? ? @sum[2] : params[:social1],  :style => 'width:80px') %>
