            <td><%=@sum[3]%></td>
        </tr>
    </table>


    <%=  hidden_field_tag(:study, params[:study]) %>
    <%=  hidden_field_tag(:public, params[:public])%>
    <%=  hidden_field_tag(:scientific, params[:scientific]) %>
    <%=  hidden_field_tag(:cultural, params[:cultural])%>
    <%=  hidden_field_tag(:sports, params[:sports]) %>

    <div class="form-actions">
        <button class="btn btn-large btn-info" type="submit" > Посчитать</button>
        <%=  link_to 'Далее >>>', { controller: 'pay_category_to_semesters', action: 'stip2', sports: params[:sports], cultural: params[:cultural],scientific: params[:scientific], public: params[:public], study: params[:study],first: params[:first],social1: params[:social1],four1: params[:four1]},  :class => "btn btn-primary"  %>
