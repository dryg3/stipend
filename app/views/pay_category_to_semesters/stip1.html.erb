            <td><%= @category.four %> <%= text_field_tag(:four1, params[:four1].nil? ? @sum[2] : params[:four1],  :style => 'width:80px')%>
            + </td>
            <td><%= @category.five %> <%= text_field_tag(:five1, params[:five1].nil? ? @sum[2] : params[:five1],  :style => 'width:80px') %>
            =</td>
            <td><%=  text_field_tag(:summa, @sum[3],  :style => 'width:80px') %></td>
        </tr>
    </table>


    <%=  hidden_field_tag(:study, params[:study]) %>
    <%=  hidden_field_tag(:public, params[:public])%>
    <%=  hidden_field_tag(:scientific, params[:scientific]) %>
    <%=  hidden_field_tag(:cultural, params[:cultural])%>
    <%=  hidden_field_tag(:sports, params[:sports]) %>

    <div class="form-actions">
        <button class="btn btn-large btn-info" type="submit" > Посчитать</button>
        <%=  link_to 'Далее >>>', { controller: 'pay_category_to_semesters', action: 'stip2', faculty_id: current_user.faculty_id, sports: params[:sports], cultural: params[:cultural],scientific: params[:scientific], public: params[:public], study: params[:study],five1: params[:five1],social1: params[:social1],four1: params[:four1]},  :class => "btn btn-primary"  %>
    </div>
<%end%>

